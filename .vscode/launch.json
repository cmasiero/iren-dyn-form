{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "split-json",
            "program": "${workspaceRoot}/app/split-json-main.js",
            "args": [
                "--verbose",
                "-i",
                "--no-cache"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "html-builder",
            "program": "${workspaceRoot}/app/parser-builder-main.js",
            "args": [
                "--verbose",
                "-i",
                "--no-cache"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "html-main",
            "program": "${workspaceRoot}/app/parser-main.js",
            "args": [
                "--verbose",
                "-i",
                "--no-cache"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest single run all tests",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "args": [
                "--verbose",
                "-i",
                "--no-cache"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest watch all tests",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "args": [
                "--verbose",
                "-i",
                "--no-cache",
                "--watchAll"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest watch current file",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            "args": [
                "${fileBasename}",
                "--verbose",
                "-i",
                "--no-cache",
                "--watchAll"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Node server express",
            "program": "${workspaceRoot}/server4test/server-express.js",
            "args": [
                "--verbose",
                "-i",
                "--no-cache",
                "--watchAll"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Node server express multer",
            "program": "${workspaceRoot}/server4test/server-express-multer.js",
            "args": [
                "--verbose",
                "-i",
                "--no-cache",
                "--watchAll"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}